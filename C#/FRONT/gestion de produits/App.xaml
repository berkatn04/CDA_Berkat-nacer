<Application x:Class="gestion_de_produits.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:gestion_de_produits"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <LinearGradientBrush x:Key="button" EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
            <GradientStop Color="Black"/>
            <GradientStop Color="#FF40EEE6" Offset="0.035"/>
            <GradientStop Color="#FF259791" Offset="0.925"/>
            <GradientStop Color="#FF35C8CF"/>
            <GradientStop Color="#FF3FECE5"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="buttion" EndPoint="0.5,1" StartPoint="0.5,0">
            <LinearGradientBrush.RelativeTransform>
                <TransformGroup>
                    <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                    <SkewTransform CenterY="0.5" CenterX="0.5"/>
                    <RotateTransform CenterY="0.5" CenterX="0.5"/>
                    <TranslateTransform/>
                </TransformGroup>
            </LinearGradientBrush.RelativeTransform>
            <GradientStop Color="#FF4DBCC1" Offset="0.784"/>
            <GradientStop Color="#FFE0DEB7" Offset="0.52"/>
            <GradientStop Color="#FF4DBCC1" Offset="0.276"/>
        </LinearGradientBrush>

    </Application.Resources>
</Application>
